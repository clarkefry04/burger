<div class="container">

	<div class="row">
	<h1>Eat Da Burger!</h1>
	<img class="burgerImage" src="https://img00.deviantart.net/32e8/i/2016/362/8/5/burger_on_a_transparent_background__by_prussiaart-dat5fjo.png">
	</div>

	<div class="row">
		<div class="addABurger" "col-md-12">
			<h2>Add a Burger:</h2>
				<form class = "create-form">

					<div class="form-group">
						<label for="brgr">Burger Name:</label>
						<input type="text" id="brgr" name="burger_name">
					</div>

					<div class = "form-group">
						<label for="devour">Devoured?</label><br>
						<input type="radio" name="devoured" value="1" checked> Already Eaten!<br>
						<input type="radio" name="devoured" value="0"> Devoured!
					</div>

					<button type="submit">Add Burger</button>
				</form>
		</div>
	</div>

	<div class="row">
		<div class="devouredBurgers col-sm-6">
			<h2>Devour it!</h2>
				<ul>
					{{#each burgers}}
						{{#unless devoured}}
							{{> burgers/burger-block devoured=true}}
						{{/unless}}
					{{/each}}
				</ul>
		</div>

		<div class="uneatenBurgers col-sm-6">
			<h2>Already Eaten!</h2>
				<ul>
					{{#each burgers}}
						{{#if devoured}}
							{{> burgers/burger-block devoured=false}}
						{{/if}}	
					{{/each}}
				</ul>
		</div>
	</div>

</div>



